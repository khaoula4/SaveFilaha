<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:qwerjk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pl"

    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_gravity="right"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/dark_green"
            android:onClick="log"
            android:src="@drawable/ic_baseline_login_24" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:background="@drawable/wave">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="165dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="80dp"
                android:fontFamily="@font/lale"
                android:gravity="right"
                android:text="تعرف على الطفيليات  حتى تتمكن من حماية نباتاتك "
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="260dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="50dp"

                android:gravity="center"
                android:text="استعمل SaveFilaha لضمان صحة نباتاتك"
                android:textColor="#91A37F"
                android:textSize="18sp" />


            <com.google.android.material.button.MaterialButton
                app:cornerRadius="20dp"
                android:id="@+id/start"
                android:layout_width="130dp"
                android:layout_height="50dp"
               android:layout_marginTop="320dp"
                android:layout_marginLeft="145dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/light_green"
                android:radius="200dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lale"
                android:text="ابدأ الآن" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
